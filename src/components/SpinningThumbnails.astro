---
const thumbnails = [
  "https://res.cloudinary.com/dcyvxzhnl/image/upload/v1748107179/2_f8vild.png",
  "https://res.cloudinary.com/dcyvxzhnl/image/upload/v1748107179/5_qjtlx8.png",
  "https://res.cloudinary.com/dcyvxzhnl/image/upload/v1748107178/1_e183hd.png"
];
---

<div class="thumbnails-container">
  {thumbnails.map((thumb, i) => (
    <div class="thumbnail-wrapper" style={`animation-delay: ${i * 0.33}s`}>
      <img src={thumb} alt={`Game thumbnail ${i + 1}`} />
    </div>
  ))}
</div>

<style>
  .thumbnails-container {
    position: absolute;
    right: 5%;
    top: 50%;
    transform: translateY(-50%);
    display: flex;
    flex-direction: column;
    gap: 2rem;
    z-index: 2;
  }

  .thumbnail-wrapper {
    width: 300px;
    height: 170px;
    border-radius: 1rem;
    overflow: hidden;
    animation: float-spin 6s ease-in-out infinite;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.5);
  }

  .thumbnail-wrapper img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  @keyframes float-spin {
    0%, 100% {
      transform: translateY(0) rotateY(0deg);
    }
    25% {
      transform: translateY(-10px) rotateY(90deg);
    }
    50% {
      transform: translateY(0) rotateY(180deg);
    }
    75% {
      transform: translateY(10px) rotateY(270deg);
    }
  }

  @media (max-width: 1400px) {
    .thumbnails-container {
      display: none;
    }
  }
</style>