<style>
  main {
    padding-top: 80px;
  }

  .section {
    padding: 6rem 0;
    position: relative;
  }

  .section-dark {
    background: var(--dark);
  }

  .section-header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .section-badge {
    display: inline-block;
    background: var(--orange);
    color: var(--white);
    padding: 0.5rem 1.5rem;
    border-radius: 2rem;
    font-size: 0.875rem;
    font-weight: 600;
    letter-spacing: 0.1em;
    margin-bottom: 2rem;
  }

  .section-title {
    font-size: clamp(3rem, 8vw, 6rem);
    line-height: 0.9;
    margin-bottom: 1rem;
    color: var(--white);
  }

  .gradient-text {
    background: linear-gradient(90deg, var(--orange) 0%, var(--white) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .section-subtitle {
    font-size: 1.25rem;
    color: var(--gray);
    max-width: 600px;
    margin: 0 auto;
  }

  .styles-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: 2rem;
  }

  .zones-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 2rem;
  }

  .codes-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    margin-bottom: 4rem;
  }

  .redeem-instructions {
    background: rgba(10, 10, 10, 0.8);
    border: 2px solid rgba(255, 69, 0, 0.2);
    border-radius: 1rem;
    padding: 3rem;
    max-width: 800px;
    margin: 0 auto;
  }

  .redeem-instructions h3 {
    color: var(--orange);
    margin-bottom: 1.5rem;
    font-size: 1.5rem;
  }

  .redeem-instructions ol {
    list-style: none;
    counter-reset: steps;
  }

  .redeem-instructions li {
    counter-increment: steps;
    position: relative;
    padding-left: 3rem;
    margin-bottom: 1rem;
    color: rgba(255, 255, 255, 0.8);
  }

  .redeem-instructions li::before {
    content: counter(steps);
    position: absolute;
    left: 0;
    top: 0;
    width: 2rem;
    height: 2rem;
    background: var(--orange);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 600;
  }

  .official-note {
    margin-top: 2rem;
    padding-top: 2rem;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    text-align: center;
    color: var(--gray);
  }

  .official-note a {
    color: var(--orange);
    text-decoration: none;
    margin: 0 0.5rem;
  }

  .official-note a:hover {
    text-decoration: underline;
  }

  .trailers-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
    gap: 2rem;
  }

  @media (max-width: 768px) {
    .styles-grid,
    .zones-grid,
    .codes-grid,
    .trailers-grid {
      grid-template-columns: 1fr;
    }
  }
</style>